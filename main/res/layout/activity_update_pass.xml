<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@color/colorBG"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.iamavailable.gui.Register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transparent_bg"
        android:gravity="center_horizontal"
        android:background="@color/colorBG"
        android:weightSum="1">

        <include layout="@layout/header" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="IAMAVAILABLE \n UPDATE PASSWORD"
            android:id="@+id/up"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText" />

        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/oldpass"
            android:hint="Old Password"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="textPassword"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="@dimen/section_padding_top" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/border_line_two"
            android:background="@mipmap/img_one_line" />

        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/newpassword"
            android:hint="New Password"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="textPassword"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/singleLineTwo"
            android:background="@mipmap/img_two_line" />


        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/renewpassword"
            android:hint="Rewrite New Password"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="textPassword"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/singleLineFour"
            android:background="@mipmap/img_two_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE PASSWORD"
            android:id="@+id/updatepass"
            android:textColor="@color/colorBlackText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/section_padding_top"
            android:paddingBottom="@dimen/widget_padding_top"/>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar33"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />


    </LinearLayout>
</RelativeLayout>
    </ScrollView>