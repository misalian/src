<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.iamavailable.app.Forgotpass">

    <include layout="@layout/header" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="148dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IAMAVAILABLE \n FORGOT PASSWORD"
            android:id="@+id/like_intricate"
            android:layout_gravity="center|top"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText"
            />


        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email Address"
            android:textColorHint="@color/colorGreyText"
            android:textSize="@dimen/font_hint"
            android:textColor="@color/colorBlackText"
            android:paddingStart="@dimen/text_padding"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@color/colorTransparent"
            android:inputType="text" />
        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/img_one_line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/send"
            android:textColor="@color/colorBlackText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorTransparent"
            android:inputType="text" />



    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar6"
        android:layout_below="@+id/linearLayout4"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>