<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@color/colorBG"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.iamavailable.gui.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transparent_bg"
        android:gravity="center_horizontal"
        android:background="@color/colorBG"
        android:weightSum="1">

        <include layout="@layout/header" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="IAMAVAILABLE \n LOGIN"
            android:id="@+id/check_intricate"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText" />

        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/email"
            android:hint="Email Address"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="text"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="@dimen/section_padding_top" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/border_line_two"
            android:background="@mipmap/img_one_line" />

        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/password"
            android:hint="Password"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="textPassword"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/singleLineTwo"
            android:background="@mipmap/img_two_line" />

        <EditText
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/widget_vertical"
            android:id="@+id/test"
            android:hint="What is 2 * 2.5"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorBlackText"
            android:inputType="numberDecimal"
            android:background="@color/colorTransparent"
            android:paddingStart="@dimen/text_padding"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="@dimen/widget_horizontal"
            android:layout_height="@dimen/horizontal_line_size"
            android:id="@+id/singleLineThree"
            android:background="@mipmap/img_three_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/login"
            android:textColor="@color/colorBlackText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/section_padding_top"
            android:paddingBottom="@dimen/widget_padding_top"/>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:gravity="center" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER   |"
                android:id="@+id/register"
                android:textColor="@color/colorBlackText"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   FORGOT PASSWORD"
                android:id="@+id/frogetpass"
                android:textColor="@color/colorBlackText"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/register"
                android:layout_toEndOf="@+id/register" />
        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar4"
            android:paddingTop="0dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="YOU CAN NOT LOGIN \n IF YOU DID NOT REGISTER"
            android:id="@+id/textView"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textSize="@dimen/font_small"
            android:textColor="@color/colorGreyText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11" />

    </LinearLayout>
</RelativeLayout>
    </ScrollView>